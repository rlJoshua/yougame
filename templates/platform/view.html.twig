{% extends 'base.html.twig' %}

{% block title %}YouGame - {{platform.getName}}{% endblock %}

{% block body %}

    <div>
        <h1>{{platform.getName}}</h1>
        <br />
        Jeux :
        {% for game in platform.games %}
            <li><a href="{{ path("show_game", {id: game.id })}}">{{ game.title }}</a></li>
        {% endfor %}
    </div>
    {% if is_granted("ROLE_ADMIN")%}
        <br />
        <br />
        <br />
        <br />
        <h2>Modifier la Plateforme</h2>
        {{ form(form) }}
    {% endif %}

    <a class="text-danger" href="{{ path("delete_platform", {id: platform.id })}}">Supprimer la plateforme </a>
{% endblock %}