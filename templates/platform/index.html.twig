{% extends 'base.html.twig' %}

{% block title %}YouGame - Platform{% endblock %}

{% block body %}
    {% if is_granted("ROLE_ADMIN") %}
        <div class="content">
            <h1>Platformes</h1>
            <ul class="ul-list">
                {% for platform in platforms %}
                    <li class="li-list list-game"><a href="{{ path("show_platform", {id: platform.id })}}">{{ platform.getName}}</a></li>
                {% endfor %}
            </ul>
            <a class="btn-add" href="{{ path('create_platform') }}">Cr√©er une nouvelle platform</a>
        </div>

    {% endif %}
{% endblock %}
