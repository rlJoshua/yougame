{% extends 'base.html.twig' %}

{% block title %}YouGame - Games{% endblock %}

{% block body %}
    <div>
        <h1>Jeux disponible</h1>
        <ul>
            {% for game in gameList %}
                <li>{{ game.title }} : {{ game.releaseDate|date('d M Y') }} <a href="{{ path("show_game", {id: game.id })}}">Détail</a></li>
            {% endfor %}
        </ul>
        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('create_game') }}">Créer un nouveau jeu</a>
        {% endif %}
    </div>
{% endblock %}