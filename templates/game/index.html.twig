{% extends 'base.html.twig' %}

{% block title %}YouGame - Games{% endblock %}

{% block body %}
    <div class="content">
        <h1>Jeux disponible</h1>
        <ul class="ul-list">
            {% for game in gameList %}
                <li class="li-list list-game">
                    <a href="{{ path("show_game", {id: game.id })}}">{{ game.title }}</a> (
                    {% for platform in game.platforms %}
                        {{ platform.getName }}
                    {% endfor %})
                    : {{ game.releaseDate|date('d M Y') }}
                </li>
            {% endfor %}
        </ul>
        {% if is_granted("ROLE_ADMIN") %}
            <a class="btn-add" href="{{ path('create_game') }}">Cr√©er un nouveau jeu</a>
        {% endif %}
    </div>
{% endblock %}