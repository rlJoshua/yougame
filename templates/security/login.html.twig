{% extends 'base.html.twig' %}

{% block title %}YouGame - Connection{% endblock %}

{% block body %}
<form class="content" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.lastName }} {{ app.user.firstName }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% else %}
        <h1>Connexion</h1>
        <label class="form-label" for="inputEmail">Adresse e-mail</label>
        <input class="form-input form-control" type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus>
        <label class="form-label" for="inputPassword">Mot de passe</label>
        <input class=" form-input form-control" type="password" name="password" id="inputPassword" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="btn-add" type="submit">Se connecter</button>
        <a class="link" href="{{ path('register') }}">S'inscrire</a>
    {% endif %}


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}
